{
	"buildOnSave": false,
	"compileOnSave": false,
	"compilerOptions": {
	"allowJs": false,
	"allowUnreachableCode": false,
	"declaration": false,
	"experimentalDecorators": true,
	"jsx": "preserve",
	"moduleResolution": "node",
	"noEmitHelpers": true,
	"newLine": "LF",
	"noImplicitAny": true,
	"noLib": false,
	"outDir": "build",
	"removeComments": false,
	"strictNullChecks": true,
	"sourceMap": false,
	"inlineSourceMap": false,
	"suppressImplicitAnyIndexErrors": false,
	"target": "es6",
    "types": ["mocha", "chai", "sinon"]
},
  "filesGlob": [
	"src/**/*.ts",
  "src/**/*.tsx",
  "!./node_modules/**"
],
  "exclude": [
    "build/",
    "dist",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  }
}